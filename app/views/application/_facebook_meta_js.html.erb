<% if @meta.present? && Refinery::FacebookMeta.config.fb_app_id.present? %>

  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId            : '<%= Refinery::FacebookMeta.config.fb_app_id %>',
        autoLogAppEvents : true,
        xfbml            : true,
        version          : 'v6.0'
      });
    };
  </script>
  <script id='fb-sdk' async defer src="https://connect.facebook.net/<%= Refinery::FacebookMeta.sdk_locale_version %>/sdk.js"></script>

<% end %>

