<% if @meta.present? %>
<%= tag :meta, property: "og:locale", content: "#{Refinery::FacebookMeta.config.sdk_locales[I18n.locale]}" if Refinery::FacebookMeta.config.sdk_locales.has_key?(I18n.locale) %>
<%= tag :meta, property: "og:type", content: "#{@meta.og_type}" if @meta.og_type.present? %>
<%= tag :meta, property: "og:url", content: "#{ActionDispatch::Http::URL.full_url_for( host: request.host, port: request.optional_port, protocol: request.protocol, path: @canonical)}" if @canonical.present? %>
<%= tag :meta, property: "og:site_name", content: "#{Refinery::Core.config.site_name}" if @meta.present? %>
<%= tag :meta, property: "og:title", content: "#{@meta.og_title}" if @meta.og_title.present? %>
<%= tag :meta, property: "og:description", content: "#{@meta.og_description}" if @meta.og_description.present? %>
<%= tag :meta, property: "og:image", content: "#{@meta.og_image.url(host: request.protocol + request.host_with_port)}" if @meta.og_image.present? %>
<%= tag :meta, property: "og:image:width", content: "#{@meta.og_image.width}" if @meta.og_image.present? %>
<%= tag :meta, property: "og:image:height", content: "#{@meta.og_image.height}" if @meta.og_image.present? %>
<%= tag :meta, property: "fb:app_id", content: "#{Refinery::FacebookMeta.config.fb_app_id}" if Refinery::FacebookMeta.config.fb_app_id.present? %>
<% end %>